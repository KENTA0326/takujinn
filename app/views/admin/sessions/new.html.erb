<h2 class="heading heading-1">管理者ログイン</h2>
<div class="py-5 px-5">
<%#= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
  <table class="table">
         <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td></td>
          <td>
            <div class="field">
              <%= f.text_field :email, autofocus: true, class: "email", placeholder:"p@i" %>
            </div>
          </td>
        </tr>
        <tr>
          <td><%= f.label :password, "パスワード(6文字以上)" %></td>
          <td></td>
          <td>
            <div class="field">
              <!--<%# if @minimum_password_length %>-->
              <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
              <!--<%# end %>-->
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </td>
        </tr>
      </table>

 <div class="actions text-center">
  <%= f.submit "ログイン", class: "btn btn-info btn-sm mb-2" %>
 </div>
<% end %>
 </div>

