<div class='container my-5 bg-white' style="padding: 40px;">
  <div class='row'>
    <div class='col-md-10 offset-md-1'>
      <div class="d-flex justify-content-between" style="background-color: #fff; padding: 5px;">
        <h2 class="d-flex justify-content-start">投稿一覧</h2>
      </div>

      <div class = "my-3">
      <table class="table table-striped" style="background-color: #fff;">
        <thead>
          <tr>
            <%= flash[:notice] %>
          </tr>
          <tr class="table-warning">
            <th>投稿日時</th>
            <th>ユーザーネーム</th>
            <th>打ちたい戦型</th>
            <th>一言</th>
          </tr>
        </thead>

       <tbody>
                  <% @posts.each do |post| %>
                  <tr>
                    <td><%= link_to post.created_at.strftime("%Y/%m/%d %H:%M"), admin_post_path(post) %></td>
                    <td><%= post.user.name %></td>
                    <td><%= post.btype %></td>
                    <td>
                      <%= post.text %>
                      </td>
                      <%#= form_with model: order, url: admin_order_path(order), method: :patch do |f| %>
                  </tr>
                <% end %>
            </tbody>
        </table>

      </div>


    </div>
  </div>
</div>