<h2 class="heading heading-1">投稿一覧</h2>

  <% @posts.each do |post| %>
  <div class="card card-post1">
  <div class="card-body">
    <h5 class="card-title">
     <%= link_to admin_post_path(post) do %>
       <%= post.user.name %>
       <% end %>
     </h5>
  </div>
  <ul class="list-group-flush" style="padding-left: 0px;">
    <li class="post-detail-group">
     <div class="d-flex">
      <dt class="post-detail1">投稿日時</dt>
      <dd class="post-detail2"><%= link_to post.created_at.strftime("%Y/%m/%d %H:%M"), admin_post_path(post) %></dd>
     </div>
    </li>
     <li class="post-detail-group">
     <div class="d-flex">
      <dt class="post-detail1">打ちたい戦型</dt>
      <dd class="post-detail2"><%= post.btype %></dd>
     </div>
    </li>
    <li class="post-detail-group">
     <div class="d-flex">
      <dt class="post-detail1">場所</dt>
      <dd class="post-detail2"><%= post.location %></dd>
     </div>
    </li>
    <li class="post-detail-group">
     <div class="d-flex">
      <dt class="post-detail1">一言</dt>
      <dd class="post-detail2"><%= post.text %></dd>
     </div>
    </li>
  </ul>
</div>
<% end %>
