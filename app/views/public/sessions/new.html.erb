<div class="container my-5 bg-white">

  <div class="mx-auto pt-5">
    <h3>ログイン</h3>
    <div class="py-5 px-5">
      <%= form_with model: @user, url:  user_session_path do |f| %>
      <%#= render "public/shared/error_messages", resource: resource %>

      <table class="table">
         <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td></td>
          <td>
            <div class="field">
              <%= f.text_field :email, autofocus: true, class: "email", placeholder:"sample@h.com", size: 70 %>
            </div>
          </td>
        </tr>
        <tr>
          <td><%= f.label :password, "パスワード(6文字以上)" %></td>
          <td></td>
          <td>
            <div class="field">
              <!--<%# if @minimum_password_length %>-->
              <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
              <!--<%# end %>-->
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </td>
        </tr>
      </table>
      <div class="actions text-center">
        <%= f.submit "ログイン", class: "btn btn-info btn-sm mb-2" %>
      </div>
      <% end %>
    </div>
  </div>