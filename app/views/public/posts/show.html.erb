<div class="container">
  <div class="row">
    <div class="col-5">
      <table class="table">
        <tbody>
            <tr>
              <td class="table-warning">ユーザーネーム</td>
              <td><%= link_to @post.user.name, user_path(@post.user) %></td>
            </tr>

            <tr >
              <td class="table-warning">打ちたい戦型</td>
              <td><%= @post.btype %></td>
            </tr>

            <tr>
              <td class="table-warning">場所</td>
              <td><%= @post.location %></td>
            </tr>

            <tr>
              <td class="table-warning">一言</td>
              <td><%= @post.text %></td>
            </tr>
          </tbody>
      </table>
    </div>
    <div class="col-6">
      <h2>コメント</h2>
       <div id="post-comments" class="text-center pt-3">
              <%= render "public/post_comments/index", post: @post %>
            </div>
          </div>
          <aside id="subA">
            <div id="comment-form" class="boxA" >
              <%= render "public/post_comments/form", post: @post, post_comment: @post_comment %>
            </div>
    </div>
  </div>
</div>