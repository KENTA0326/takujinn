<h2 class="heading heading-1">投稿一覧</h2>
<div class="publish-list__item d-flex">
  <% @posts.each do |post| %>
   <div class=" m-2">
    <div class="d-flex mx-3">
     <dt>ユーザーネーム</dt>
     <dd>
       <%= link_to post_path(post) do %>
       <%= post.user.name %>
       <% end %>
     </dd>
    </div>
    <div class="d-flex mx-3">
     <dt>打ちたい戦型</dt>
     <dd><%= post.btype %></dd>
    </div>
    <div class="d-flex mx-3">
     <dt>場所</dt>
     <dd><%= post.location %></dd>
    </div>
    <div class="d-flex mx-3">
     <dt>一言</dt>
     <dd><%= post.text %></dd>
    </div>
    <div id='favorite_buttons_<%= post.id %>'><%= render "public/favorites/btn", post: post %></div>
   </div>
  <% end %>
  <% @posts.each do |post| %>
  <div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">
     <%= link_to post_path(post) do %>
       <%= post.user.name %>
       <% end %>
     </h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
     <span>打ちたい戦型</span>
     <span><%= post.btype %></span>
    </li>
    <li class="list-group-item">
     <span>場所</span>
     <span><%= post.location %></span>
    </li>
    <li class="list-group-item">
     <span>一言</span>
     <span><%= post.text %></span>
    </li>
  </ul>
  <div class="card-body">
   <div id='favorite_buttons_<%= post.id %>'><%= render "public/favorites/btn", post: post %></div> 
  </div>
</div>
  <% end %>


