<h2 class="heading heading-1">投稿一覧</h2>
 <table class="table">
   <thead>
     <tr>
       <td>ユーザーネーム</td>
       <td>打ちたい戦型</td>
       <td>場所</td>
       <td>一言</td>
     </tr>
   </thead>

   <tbody>
    <% @posts.each do |post| %>
     <tr>
       <td>
         <%= link_to post_path(post) do %>
         <%= post.user.name %>
         <% end %>
       </td>
       <td><%= post.btype %></td>
       <td><%= post.location %></td>
       <td><%= post.text %></td>
       <td id='favorite_buttons_<%= post.id %>'><%= render "public/favorites/btn", post: post %></td>
     </tr>
     <% end %>
   </tbody>

 </table>


