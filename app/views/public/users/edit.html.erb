<h2 class="heading heading-1">ユーザー編集</h2>
<div class="d-flex justify-content-center">
  <%= form_with model: @user, url: user_path, method: :patch do |f| %>
    <dl class="profile-detail p-5">
      <div>
        <dt>
          <%= f.label :name, "ユーザーネーム" %>
        </dt>
        <dd>
          <%= f.text_field :name, autofocus: true, class: "name", placeholder: "ユーザーネーム" %>
        </dd>
      </div>
      <div>
        <dt>
          <%= f.label :year, "経験年数" %>
        </dt>
        <dd>
          <%= f.text_field :year, class: "year", placeholder: "00年" %>
        </dd>
      </div>
      <div>
        <dt>
          <%= f.label :btype, "戦型" %>
        </dt>
        <dd>
          <%= f.text_field :btype, class: "btype", placeholder: "カットマン" %>
        </dd>
      </div>
      <div>
        <dt>
          <%= f.label :telephone, "電話番号(ハイフンなし)" %>
        </dt>
        <dd>
          <%= f.text_field :telephone, autofocus: true, class: "telephone", placeholder: "0000000000" %>
        </dd>
      </div>
    </dl>

    <div class="post-edit-button1">
      <div style="margin: 10px 10px;">
      <%= f.button "更新する", class: "post-edit-user-button" %>
      </div>
      <div style="margin: 10px 10px;">
      <%= link_to "退会する", user_users_unsubscribe_path(@user), class: "post-destroy-user-button" %>
      </div>
    </div>
  <% end %>
</div>
